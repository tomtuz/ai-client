{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@client/*": ["./packages/client/src/*"],
      "@server/*": ["./packages/server/src/*"],
      "@chroma/*": ["./packages/chroma/*"]
    }
  },
  "references": [{ "path": "./packages/client" }, { "path": "./packages/server" }, { "path": "./packages/chroma" }],
  "exclude": ["**/node_modules", "**/dist"]
}
