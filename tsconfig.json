{
  "references": [{ "path": "./packages/client" }, { "path": "./packages/server" }, { "path": "./packages/chroma" }],
  "compilerOptions": {
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "types": ["react", "node"],
    "baseUrl": ".",
    "paths": {
      "@client/*": ["./packages/client/src/*"],
      "@server/*": ["./packages/server/src/*"],
      "@chroma/*": ["./packages/chroma/*"]
    }
  },
  "exclude": ["**/node_modules"]
}
