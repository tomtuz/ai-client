{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Chrome (Run)",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "presentation": {
        "hidden": true,
        "group": "RunAll",
        "order": 2
      },
      "preLaunchTask": "Vite Server (Run)"
    },

    {
      "name": "Express (Run)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["pnpm", "run", "dev:server"],
      "smartStep": true,
      "trace": true,
      "presentation": {
        "hidden": false,
        "group": "RunAll",
        "order": 1
      },
      "cwd": "${workspaceFolder}",
      "preLaunchTask": ""
    },

    {
      "name": "Chroma (Run)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["pnpm", "run", "dev:chroma"],
      "smartStep": true,
      "trace": true,
      "presentation": {
        "hidden": false,
        "group": "RunAll",
        "order": 3
      },
      "cwd": "${workspaceFolder}"
    },

    {
      "name": "CustomCommand",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["pnpm", "${input:userSelect}", "${input:userInput}"],
      "smartStep": true,
      "trace": true,
      "cwd": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "CustomRun",
        "order": 1
      },
      "console": "integratedTerminal"
    },

    {
      "name": "Eslint (Run)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "args": ["pnpm", "tsx", "scripts/eslint_debug.mjs"],
      "smartStep": true,
      "trace": true,
      "cwd": "${workspaceFolder}"
    }
  ],

  "inputs": [
    {
      "id": "userInput",
      "description": "Supply custom CLI option value",
      "type": "promptString"
    },
    {
      "id": "userSelect",
      "description": "Pick option to run",
      "type": "pickString",
      "options": [
        {
          "value": ""
        },
        {
          "value": "run dev"
        },
        {
          "value": "run preview"
        },
        {
          "value": "run typecheck"
        }
      ]
    }
  ],

  "compounds": [
    {
      "name": "Server/Client/VectorDB",
      "presentation": {
        "hidden": false,
        "group": "ClientApp",
        "order": 0
      },
      "stopAll": true,
      "configurations": ["Express (Run)", "Chrome (Run)", "Chroma (Run)"],
      "preLaunchTask": "Vite Server (Run)"
    }
  ]
}
